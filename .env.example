# Fast Embedding API Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# API Configuration
# =============================================================================
HOST=0.0.0.0
PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# Required Models
# =============================================================================
# Comma-separated list of models to validate and cache on startup
REQUIRED_MODELS=BAAI/bge-small-en-v1.5,BAAI/bge-base-en-v1.5,sentence-transformers/all-MiniLM-L6-v2

# =============================================================================
# Performance Settings
# =============================================================================
THREAD_POOL_WORKERS=4
MAX_TEXT_LENGTH=8192
MAX_BATCH_SIZE=32
REQUEST_TIMEOUT=300

# =============================================================================
# Cache Settings
# =============================================================================
MODEL_CACHE_TTL=3600
MAX_CACHED_MODELS=5
CLEANUP_INTERVAL=60

# =============================================================================
# Security Settings
# =============================================================================
ENABLE_CORS=true
CORS_ORIGINS=*
ENABLE_RATE_LIMIT=true
RATE_LIMIT_REQUESTS=100

# =============================================================================
# Monitoring
# =============================================================================
ENABLE_METRICS=true
